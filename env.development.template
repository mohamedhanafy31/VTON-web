# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env when running in development mode
# cp env.development.template .env

# =============================================================================
# ENVIRONMENT IDENTIFICATION
# =============================================================================
NODE_ENV=development
ENVIRONMENT=development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
SESSION_SECRET=dev_session_secret_change_this_to_something_secure_in_real_dev
SESSION_MAX_AGE=86400000

# =============================================================================
# FIREBASE CONFIGURATION - DEVELOPMENT PROJECT
# =============================================================================
# Create a separate Firebase project for development (e.g., vton-dev)
# Download the service account key and save as serviceAccountKey.dev.json
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.dev.json

# Development Firebase Web App Configuration
# Get these from your DEVELOPMENT Firebase project console
FIREBASE_API_KEY=your_dev_firebase_api_key
FIREBASE_AUTH_DOMAIN=vton-dev.firebaseapp.com
FIREBASE_PROJECT_ID=vton-dev
FIREBASE_STORAGE_BUCKET=vton-dev.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_dev_messaging_sender_id
FIREBASE_APP_ID=your_dev_app_id
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# CLOUDINARY CONFIGURATION - DEVELOPMENT
# =============================================================================
# Consider using a separate Cloudinary account/folder for development
CLOUDINARY_CLOUD_NAME=your_dev_cloud_name
CLOUDINARY_API_KEY=your_dev_api_key
CLOUDINARY_API_SECRET=your_dev_api_secret

# =============================================================================
# ARTIFICIAL STUDIO API - DEVELOPMENT
# =============================================================================
# You can use the same API key or request a development key
TRYON_API_KEY=your_dev_artificial_studio_api_key

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================
PUBLIC_URL=http://localhost:3000
NGROK_AUTHTOKEN=your_ngrok_authtoken

# Logging (verbose for debugging)
LOG_LEVEL=debug
LOGS_FOLDER=./logs
LOG_CONSOLE=true
VERBOSE_LOGGING=true

# CORS (allow localhost and ngrok)
CORS_ORIGINS=http://localhost:3000,https://*.ngrok.io

# Development Features
DEBUG=true
ENABLE_CAMERA=true
ENABLE_SOCKET_IO=true
ENABLE_WEBHOOKS=true

# Rate limiting (more lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env when deploying to production
# cp env.production.template .env

# =============================================================================
# ENVIRONMENT IDENTIFICATION
# =============================================================================
NODE_ENV=production
ENVIRONMENT=production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
SESSION_MAX_AGE=86400000

# =============================================================================
# FIREBASE CONFIGURATION - PRODUCTION PROJECT
# =============================================================================
# Use your existing production Firebase project (vton-f7059) or create a new one
# Save the production service account key as serviceAccountKey.prod.json
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.prod.json

# Production Firebase Web App Configuration
# Get these from your PRODUCTION Firebase project console
FIREBASE_API_KEY=your_prod_firebase_api_key
FIREBASE_AUTH_DOMAIN=vton-f7059.firebaseapp.com
FIREBASE_PROJECT_ID=vton-f7059
FIREBASE_STORAGE_BUCKET=vton-f7059.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_prod_messaging_sender_id
FIREBASE_APP_ID=your_prod_app_id
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# CLOUDINARY CONFIGURATION - PRODUCTION
# =============================================================================
# Use production Cloudinary settings
CLOUDINARY_CLOUD_NAME=your_prod_cloud_name
CLOUDINARY_API_KEY=your_prod_api_key
CLOUDINARY_API_SECRET=your_prod_api_secret

# =============================================================================
# ARTIFICIAL STUDIO API - PRODUCTION
# =============================================================================
TRYON_API_KEY=your_prod_artificial_studio_api_key

# =============================================================================
# PRODUCTION SPECIFIC SETTINGS
# =============================================================================
PUBLIC_URL=https://yourdomain.com

# Logging (more restrictive in production)
LOG_LEVEL=warn
LOGS_FOLDER=./logs
LOG_CONSOLE=false
VERBOSE_LOGGING=false

# CORS (restrict to your production domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Production Features
DEBUG=false
ENABLE_CAMERA=true
ENABLE_SOCKET_IO=true
ENABLE_WEBHOOKS=true
TRUST_PROXY=true

# Rate limiting (more restrictive for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# =============================================================================
# VTON (Virtual Try-On) Application Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# Session secret key for security (REQUIRED)
# Generate a secure random string: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_super_secure_session_secret_key_change_this_in_production

# Session maximum age in milliseconds (default: 24 hours)
SESSION_MAX_AGE=86400000

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

# Path to Firebase service account key file (default: ./serviceAccountKey.json)
# Download from Firebase Console > Project Settings > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# Firebase Web App Configuration (for frontend)
# These are optional but recommended for full functionality
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# CLOUDINARY CONFIGURATION (REQUIRED IN DEVELOPMENT)
# =============================================================================
# Get these from your Cloudinary dashboard
# Required in development mode, recommended in production

# Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=your_cloud_name

# Cloudinary API key
CLOUDINARY_API_KEY=your_api_key

# Cloudinary API secret
CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# ARTIFICIAL STUDIO API (REQUIRED)
# =============================================================================
# Get your API key from https://www.artificialstudio.ai/
# This is required for virtual try-on functionality

TRYON_API_KEY=your_artificial_studio_api_key

# =============================================================================
# PUBLIC URL CONFIGURATION
# =============================================================================
# URL that external services (like AI APIs) can reach your application
# For development, this will be your ngrok URL
# For production, this should be your actual domain

PUBLIC_URL=http://localhost:3000

# =============================================================================
# NGROK CONFIGURATION (DEVELOPMENT ONLY)
# =============================================================================
# Optional: ngrok authtoken for development webhook testing
# Get from https://dashboard.ngrok.com/get-started/your-authtoken

NGROK_AUTHTOKEN=your_ngrok_authtoken

# =============================================================================
# LOGGING CONFIGURATION (OPTIONAL)
# =============================================================================
# These have sensible defaults but can be customized

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Logs folder path (default: ./logs)
LOGS_FOLDER=./logs

# Maximum log file size (default: 10m)
LOG_FILE_MAX_SIZE=10m

# Maximum number of log files to keep (default: 5)
LOG_MAX_FILES=5

# Enable console logging in production (default: false)
LOG_CONSOLE=false

# =============================================================================
# PRODUCTION SPECIFIC SETTINGS
# =============================================================================
# These settings are important for production deployments

# CORS allowed origins (comma-separated)
# Add your production domain here
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Trust proxy (set to true if behind reverse proxy)
TRUST_PROXY=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Additional security configurations

# Rate limiting (requests per minute per IP)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# =============================================================================
# FEATURE FLAGS (OPTIONAL)
# =============================================================================
# Enable/disable specific features

# Enable camera functionality (default: true)
ENABLE_CAMERA=true

# Enable real-time updates (default: true)
ENABLE_SOCKET_IO=true

# Enable webhook processing (default: true)
ENABLE_WEBHOOKS=true

# =============================================================================
# DEVELOPMENT TOOLS (DEVELOPMENT ONLY)
# =============================================================================
# These should be disabled in production

# Enable debug mode (default: false in production)
DEBUG=false

# Enable detailed logging (default: false in production)
VERBOSE_LOGGING=false

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. REQUIRED VARIABLES:
#    - SESSION_SECRET (must be changed in production)
#    - TRYON_API_KEY (for virtual try-on functionality)
#    - CLOUDINARY_* (required in development, recommended in production)
#
# 2. RECOMMENDED FOR PRODUCTION:
#    - FIREBASE_* (for full Firebase functionality)
#    - PUBLIC_URL (set to your production domain)
#
# 3. DEVELOPMENT ONLY:
#    - NGROK_AUTHTOKEN (for webhook testing)
#    - DEBUG, VERBOSE_LOGGING
#
# 4. SECURITY:
#    - Never commit .env files to version control
#    - Use strong, unique SESSION_SECRET in production
#    - Rotate API keys regularly
#
# 5. VALIDATION:
#    - Run 'npm run validate-config' to check configuration
#    - The app will not start if required variables are missing
#
# =============================================================================
